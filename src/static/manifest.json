{
  "manifest_version": 3,
  "name": "FlowTx",
  "description": "FlowTx - UI friendly Solana Wallet",
  "version": "0.1.0",
  "icons": {
    "16": "icons/FlowTxIcon16.png",
    "48": "icons/FlowTxIcon48.png",
    "128": "icons/FlowTxIcon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "React Typescript Extension"
  },
  "permissions": ["storage", "contextMenus", "alarms"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
