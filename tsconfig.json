{
	"compilerOptions": {
		"jsx": "react",
		"module": "ES2020",
		"target": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"baseUrl": "./src",
		"paths": {
			"@pages/*": ["./pages/*"],
			"@components/*": ["./components/*"],
			"@utils/*": ["./utils/*"],
			"@hooks/*": ["./hooks/*"],
			"@storage/*": ["./storage/*"],
			"@styles/*": ["./styles/*"],
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}